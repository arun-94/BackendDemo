<android.support.design.widget.CollapsingToolbarLayout
    android:id="@+id/collapsingToolbarLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        android:paddingTop="?android:attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/accent_white"
            android:textSize="12sp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editText_productname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:hint="Product Name"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/accent_white"
            android:textSize="20sp"
            app:met_baseColor="@color/accent_white"
            app:met_primaryColor="@color/accent_white"
            app:met_underlineColor="@color/accent_white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"></Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@color/accent_white"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/accent_white"
            android:textSize="12sp"
            android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            >

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:hint="Quantity"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/accent_white"
                android:textSize="20sp"
                app:met_baseColor="@color/accent_white"
                app:met_primaryColor="@color/accent_white"
                app:met_underlineColor="@color/accent_white"
                android:textAlignment="gravity"
                android:inputType="number|textNoSuggestions"
                android:maxWidth="80dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. "
                    android:textColor="@color/accent_white"
                    android:textSize="20sp"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/editText_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@color/accent_white"
                    android:textSize="20sp"
                    app:met_baseColor="@color/accent_white"
                    app:met_primaryColor="@color/accent_white"
                    app:met_underlineColor="@color/accent_white"
                    />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        android:minHeight="?android:attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ActionBarPopupThemeOverlay"
        app:theme="@style/ActionBarThemeOverlay"
        >
    </android.support.v7.widget.Toolbar>


</android.support.design.widget.CollapsingToolbarLayout>
