<android.support.design.widget.CollapsingToolbarLayout
    android:id="@+id/collapsingToolbarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        android:paddingTop="?android:attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/accent_white"
            android:textSize="12sp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editText_productname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:hint="Product Name"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/accent_white"
            android:textSize="20sp"
            app:met_baseColor="@color/accent_white"
            app:met_primaryColor="@color/accent_white"
            app:met_underlineColor="@color/accent_white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"></Space>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/accent_white"
            android:textSize="12sp"
            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:textColor="@color/accent_white"
                android:textSize="20sp"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:hint="Product Price (Rs.)"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/accent_white"
                android:textSize="20sp"
                app:met_baseColor="@color/accent_white"
                app:met_primaryColor="@color/accent_white"
                app:met_underlineColor="@color/accent_white"/>
        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ActionBarPopupThemeOverlay"
        app:theme="@style/ActionBarThemeOverlay"
        >
    </android.support.v7.widget.Toolbar>


</android.support.design.widget.CollapsingToolbarLayout>
