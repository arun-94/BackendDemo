<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tilerepeat"
        android:paddingTop="?android:attr/actionBarSize"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <include layout="@layout/card_product_details_1"/>

            <include layout="@layout/card_product_details_2"/>

            <include layout="@layout/card_product_details_3"/>

            <include layout="@layout/card_product_details_4"/>

            <include
                layout="@layout/card_product_details_5"
                android:paddingBottom="?android:attr/actionBarSize"/>
        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                                       style="@style/HeaderBar"
                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:elevation="2dp"
                                       app:popupTheme="@style/ActionBarPopupThemeOverlay"
                                       app:theme="@style/ActionBarThemeOverlay">
    </android.support.v7.widget.Toolbar>

<!--    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:max="100"
        android:progress="1"/>-->

</RelativeLayout>