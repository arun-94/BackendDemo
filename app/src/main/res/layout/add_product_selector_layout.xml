<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:focusable="true"
              android:clickable="true"
              android:background="?attr/selectableItemBackground"
              android:padding="16dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selector_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0"
        android:src="@drawable/ic_help_grey_24dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/selector_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:text="Select Category"
        android:textAlignment="gravity"
        android:textAppearance="@style/Tisser_TextStyle_Medium"
        android:textColor="@color/primary_brown"
        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_weight="0"
        android:src="@drawable/ic_arrow_right_grey_24dp"/>

</LinearLayout>