<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.refocus.puneet.axishackathon.Activities.LoginActivity"
              android:gravity="center_vertical">


    <ImageView
        android:id="@+id/login_logo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:scaleType="centerInside"
        android:src="@drawable/logo_light_brown_120"
        />

    <TextView
        android:id="@+id/login_logo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:scaleType="center"
        android:src="@drawable/logo"
        android:text="Artisan"
        android:textAlignment="center"
        android:textColor="@color/primary_brown"
        android:textSize="32dp"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editText_custid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoText="false"
            android:editable="true"
            android:elegantTextHeight="false"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Login ID"
            android:inputType="textCapCharacters"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="arun@arun.com"
            app:met_baseColor="@color/primary_brown"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Login ID"
            app:met_primaryColor="@color/primary_brown"
            app:met_underlineColor="@color/primary_brown"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editText_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoText="false"
            android:editable="true"
            android:elegantTextHeight="false"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Password"
            android:inputType="textCapCharacters"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="Arun123"
            app:met_baseColor="@color/primary_brown"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Password"
            app:met_primaryColor="@color/primary_brown"
            app:met_underlineColor="@color/primary_brown"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/primary_brown"
            android:elevation="5dp">

            <Button
                android:id="@+id/loginButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:text="Log In"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                />

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:id="@+id/progress_view"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:cpv_color="@color/white"
                app:cpv_indeterminate="true"
                app:cpv_thickness="2dp"
                />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_note_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:focusableInTouchMode="true"
        android:scaleType="center"
        android:src="@drawable/logo"
        android:text="This app is meant for Tisser artisans only."
        android:textAlignment="gravity"
        android:textColor="@color/primary_brown"
        android:textSize="16dp"
        android:textAppearance="@style/Tisser_TextStyle_Small"
        android:gravity="bottom|center_horizontal"
        />

</LinearLayout>
